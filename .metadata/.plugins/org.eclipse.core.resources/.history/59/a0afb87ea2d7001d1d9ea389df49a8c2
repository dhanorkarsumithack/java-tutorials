package Sumit.JavaTraining;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Sword {
	public static void wholeft(List<Integer> person,int index,int k) {
		
		if(person.size()==1) {
			System.out.println("left person is "+person.get(0));
			return ;
		}
		
		index=(index+k)%person.size();
		
		person.remove(index);
		
	   wholeft(person, index, k);
		
	}

   public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		
		int n=sc.nextInt();
		
		
		List<Integer> list=new ArrayList<>();
		
		for(int i=1;i<=n;i++) {
			list.add(i);
		}
		
		wholeft(list, 0, 1);
		
		
	}
}
